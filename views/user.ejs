<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Product Dealaer</title>
       
        
    <!-- Bootstrap -->
    <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom styles for this template -->
   <link href="/css/jumbotron-narrow.css" rel="stylesheet">
    </head>
    <body>

            
            <% if(success_msg) { %>
                    
                    
                <h3 class="myerror"> <%= success_msg %> </h3>
                   
             <% }%>

        <div class="container">
            <div class="header">
              <ul class="nav nav-pills pull-right">
                <li><a href="/">Homepage</a></li>

               

                <li><a href="/logout">logout</a></li>
                
           
                
              </ul>
              <h3 class="text-muted">Daily Product Monitoring System</h3>
            </div>
      
            <div class="jumbotron" id="AddNew">
              <h1>Login Using</h1>
              <p class="lead"></p>
              <p></p>
              <div class="row">
      
      
                  <div class="col-md-12 col-xs-12 col-sm-0 col-lg-12 ">
                    <div class="col-md-1 col-xs-2 col-sm-0 col-lg-2 "></div>
                    <div class="col-md-10 col-xs-8 col-sm-8=12 col-lg-8">
                          
                  <% if (errors) { %>
                    <div class="row">
                          <div class="card">
                            <div class="card-body">
                              <h1 class="card-title"></h1>
            
                              <% errors.forEach(function(error) { %>
                                
                                <div class="alert alert-danger" role="alert">
                                    <strong><%= error.msg %></strong> 
                                  </div>
                              
                     
                               <% }); %>
            
                            </div>
                          </div>
                        
                    </div>
            
                    <% } %>
                      
                      

                      

                          <hr>
                          <br>
                          Have an account ?? Login Now <a href="/">Login Now</a>
                       
                      
                    </div>
                    <div class="col-md-1 col-xs-2 col-sm-0 col-lg-2"></div>
        
        
                </div>
              </div>
      
          </div> <!-- /container -->
        </div>
    </body>
</html>